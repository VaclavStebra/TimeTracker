<h1>Invoices</h1>

<%= link_to 'New Invoice', new_invoice_path %>

<br>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Customer</th>
      <th>Total cost</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.date %></td>
        <td><%= invoice.customer.name %></td>
        <td><%= invoice.total_cost %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Download PDF',invoice_path(invoice, :format => :pdf ) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
